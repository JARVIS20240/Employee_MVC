@model IEnumerable<Employee_MVC.Models.employee>

@{
    ViewBag.Title = "Employee Directory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Corporate Color Palette & Styles */
    .btn-corporate {
        background-color: #004080;
        color: #ffffff;
        border: none;
    }

        .btn-corporate:hover {
            background-color: #003366;
            color: #ffffff;
        }

    .btn-outline-corporate {
        border: 1px solid #004080;
        color: #004080;
    }

        .btn-outline-corporate:hover {
            background-color: #004080;
            color: #fff;
        }

    .table thead {
        background-color: #f5f7fa;
        color: #4a4a4a;
        font-weight: 600;
    }

    .table tbody tr:hover {
        background-color: #f0f4f8;
    }

    .alert {
        border-radius: 0.4rem;
        font-size: 0.95rem;
    }

    .fw-medium {
        font-weight: 500;
    }

    .action-buttons .btn {
        min-width: 80px;
    }

    .badge-gender {
        display: inline-block;
        width: 80px;
        text-align: center;
        padding: 0.35em 0.7em;
        font-size: 0.85rem;
        border-radius: 0.3rem;
        background-color: #e0e0e0;
        color: #333;
        font-weight: 500;
    }
</style>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Employee Directory</h2>
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-corporate px-4 py-2 rounded-2" })
    </div>

    @if (TempData["Insert_Message"] != null)
    {
        <div class="alert alert-success border-start border-4 border-success shadow-sm px-4 py-2 mb-3">
            @TempData["Insert_Message"]
        </div>
    }
    @if (TempData["Update_Message"] != null)
    {
        <div class="alert alert-info border-start border-4 border-info shadow-sm px-4 py-2 mb-3">
            @TempData["Update_Message"]
        </div>
    }
    @if (TempData["Delete_Message"] != null)
    {
        <div class="alert alert-danger border-start border-4 border-danger shadow-sm px-4 py-2 mb-3">
            @TempData["Delete_Message"]
        </div>
    }

    <div class="table-responsive shadow-sm">
        <table class="table table-bordered align-middle bg-white">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.name)</th>
                    <th>@Html.DisplayNameFor(model => model.gender)</th>
                    <th>@Html.DisplayNameFor(model => model.age)</th>
                    @*<th>@Html.DisplayNameFor(model => model.salary)</th>*@
                    <th>@Html.DisplayNameFor(model => model.city)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-muted">@Html.DisplayFor(modelItem => item.Id)</td>
                        <td class="fw-medium">@Html.DisplayFor(modelItem => item.name)</td>
                        <td>
                            <span class="badge-gender">
                                @Html.DisplayFor(modelItem => item.gender)
                            </span>
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.age)</td>
                        @*<td>@Html.DisplayFor(modelItem => item.salary)</td>*@
                        <td>@Html.DisplayFor(modelItem => item.city)</td>
                        <td class="text-center">
                            <div class="btn-group btn-group-sm action-buttons" role="group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-corporate" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-secondary" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
